<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sarah.android.StartDiscoveryActivity" >

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mqtt_connect" />

    <Button
        android:id="@+id/btnSendHandshake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnConnect"
        android:layout_below="@+id/btnConnect"
        android:text="@string/mqtt_send_handshake" />

    <Button
        android:id="@+id/btnSendUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnConnect"
        android:layout_below="@+id/btnSendHandshake"
        android:text="@string/mqtt_send_url" />

    <Button
        android:id="@+id/btnSendSignal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSendHandshake"
        android:layout_below="@+id/btnSendUrl"
        android:text="@string/mqtt_send_signal" />

</RelativeLayout>